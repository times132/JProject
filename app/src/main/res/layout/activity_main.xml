<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:textStyle="italic|bold"
            android:text="@string/main_text"
            android:textSize="40sp" />
        <Button
            android:id="@+id/mainbutton1"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@+id/main_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="운동선택"
            android:onClick="onBtnClick"/>

        <Button
            android:id="@+id/mainbutton2"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@+id/mainbutton1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="추천운동" />

        <Button
            android:id="@+id/mainbutton3"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@+id/mainbutton2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="Button" />

        <Button
            android:id="@+id/mainbutton4"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@+id/mainbutton3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="Button" />

        <Button
            android:id="@+id/btnsetting"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@+id/mainbutton4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="설정"
            android:onClick="onBtnClick"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/menulist"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#8b030303"
        android:textColor="#000000"/>


</android.support.v4.widget.DrawerLayout>